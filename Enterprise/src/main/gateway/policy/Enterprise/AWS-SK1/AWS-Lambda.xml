<wsp:Policy xmlns:wsp="http://schemas.xmlsoap.org/ws/2002/12/policy" xmlns:L7p="http://www.layer7tech.com/ws/policy">
    <wsp:All wsp:Usage="Required">
        <L7p:Encapsulated encassName="JWT-Validate"/>
        <L7p:SetVariable>
            <L7p:Expression><![CDATA[{
   &quot;functionName&quot;: &quot;${gateway.aws.functionName}&quot;,
   &quot;functionPayload&quot;: { &quot;Gateway&quot;: &quot; ${gateway.cluster.hostname} is ephemeral Gateway from CICD Workflow&quot;}
}]]></L7p:Expression>
            <L7p:VariableToSet stringValue="awsPayload"/>
        </L7p:SetVariable>
        <L7p:CustomAssertion>
            <L7p:base64SerializedValue></L7p:base64SerializedValue>
        </L7p:CustomAssertion>
        <L7p:HardcodedResponse>
            <L7p:ResponseBody><![CDATA[${lambdaResp}

${response.mainpart}]]></L7p:ResponseBody>
            <L7p:ResponseContentType stringValue="text/plain; charset=UTF-8"/>
        </L7p:HardcodedResponse>
    </wsp:All>
</wsp:Policy>
